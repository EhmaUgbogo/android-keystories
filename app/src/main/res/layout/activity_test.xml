<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IgnoreForApiTest.TestActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/test_register_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="RegisterUser"
                android:text="Register user" />

            <Button
                android:id="@+id/test_showToken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showToken"
                android:text="show Token" />

            <Button
                android:id="@+id/test_login_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="LoginUser"
                android:text="login user" />

            <Button
                android:id="@+id/test_getAllStories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getAllStories"
                android:text="get All Stories" />

            <Button
                android:id="@+id/test_getAStory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getAStory"
                android:text="get A Story" />

            <Button
                android:id="@+id/test_getFirstCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getFirstCategory"
                android:text="get First Category" />

            <Button
                android:id="@+id/test_getAllCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getAllCategory"
                android:text="get All Category" />


            <Button
                android:id="@+id/test_getCategoryStorieWithIdOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getCategoryStoriesWithIdOne"
                android:text="get Category Stories With Id One" />

            <Button
                android:id="@+id/test_getAllUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getAllUsers"
                android:text="get All Users" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/test_logout_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="logoutUser"
                android:text="logout user" />

            <Button
                android:id="@+id/test_getUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getUser"
                android:text="get current User" />


            <Button
                android:id="@+id/test_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="changePassword"
                android:text="change password" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getUserProfile"
                android:text="get User Profile" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="updateUserProfile"
                android:text="update User Profile" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getBookmark"
                android:text="get Bookmark" />


            <TextView
                android:id="@+id/test_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Info shows here"
                android:gravity="center"
                android:layout_marginTop="16dp"/>




        </LinearLayout>

    </ScrollView>
    <ProgressBar
        android:id="@+id/test_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>